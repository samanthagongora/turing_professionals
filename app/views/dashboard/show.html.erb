
<div class='container user-dashboard-page'>

<!-- heading with username and page description -->
    <div class = "container">
      <div class = "row well">
        <div class="row text-center">
          <h2> <%= current_user.username %>'s Dashboard </h2>
        </div>
      </div>
    </div>

  <div class='container'>
    <div class="row well">
      <div class="row text-center">
        <div class="row-conformity row-centered">
        <!-- <div class="row match-my-cols"> -->
        <!-- DISPLAY 1 -->

        <div class='col-md-4'>
          <div class='row text-center'>
            <div class="thumbnail">
              <i class='glyphicon glyphicon-briefcase'></i>
                <h3>Favorite Companies</h3>
                  <%  @favorited_companies.each do |company| %>
                  <p> <%= company.name %></p>
                  <p> <%= company.website %></p>
                  <% end %>
              <button type = 'button' class='btn btn-primary'>See All</button>
            </div>
          </div>
        </div>
        <!-- DISPLAY 2 //able to make private comments only I see -->

          <div class='col-md-4'>
            <div class='row text-center'>
            <div class="thumbnail">

              <i class='glyphicon glyphicon-user'></i>
                <h3>Favorite Members</h2>

                  <div class="caption">
                     <% @favorite_members.each do |member| %>
                    <p> <%= link_to member.username,user_path(member) %></p>
                    <p> starred on: <%= member.created_at %></p>
                  <% end %>
                  </div>
                <button type = 'button' class='btn btn-primary'>See All</button>
              </div>
            </div>
          </div>

        <!-- DISPLAY 3 -->

        <div class='col-md-4'>
          <div class='row text-center'>
            <div class="thumbnail">
              <i class='glyphicon glyphicon-pencil'></i>
                <h3>My Items</h2>
                  <h4><a href="<%= current_user.resume.url %>">Resume</h4>
                  <p> comment </p>
                  <p><%= link_to "Profile", user_path(current_user) %></p>
                <button type = 'button' class='btn btn-primary'>See All</button>
            </div>
          </div>
        </div>

        <!-- DISPLAY 4 -->
        <div class='col-md-4'>
          <div class='row text-center'>
            <div class="thumbnail">
              <i class='glyphicon glyphicon-comment'></i>
                <h3>Conversations</h2>
                  <p> resume </p>
                  <p> comment </p>
                  <p><%= link_to "Profile", user_path(current_user) %></p>
                <button type = 'button' class='btn btn-primary'>See All</button>
            </div>
          </div>
        </div>

        <!-- DISPLAY 5 -->
        <div class='col-md-4'>
          <div class='row text-center'>
            <div class="thumbnail">
              <i class='glyphicon glyphicon-globe'></i>
                <h3>Locations</h2>
                  <p> resume </p>
                  <p> comment </p>
                  <p><%= link_to "Profile", user_path(current_user) %></p>
                <button type = 'button' class='btn btn-primary'>See All</button>
            </div>
          </div>
        </div>

        <!--  DISPLAY 6-->
        <div class='col-md-4'>
          <div class='row text-center'>
            <div class="thumbnail">
              <i class='glyphicon glyphicon-headphones'></i>
                <h3>Lifestyle</h2>
                  <p> resume </p>
                  <p> comment </p>
                  <p><%= link_to "Profile", user_path(current_user) %></p>
                <button type = 'button' class='btn btn-primary'>See All</button>
            </div>
          </div>
        </div>

        <!-- Display My Workplace  -->
        <% if current_user.companies %>
        <div class='col-md-4'>
          <div class='row text-center'>
            <div class="thumbnail">
              <i class='glyphicon glyphicon-headphones'></i>
                <h3>My Workplaces</h2>
                  <p> <% @companies.each do |c| %> </p>
                    <p> <%= c.name %> </p>
                  <% end %>
                  <p> My Feedback: <% @feedback[0].each do |f|%>  </p>
                    <p> <%= f.description %> </p>
                  <% end %>
                  <!-- <% @companies.each do |q| %> </p> -->
                  <!-- <p> <%#= q.interview_questions %>  </p> -->

                <button type = 'button' class='btn btn-primary'>See All</button>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>

        <!-- container div -->
        <!-- </div> -->
    </div>
  </div>
</div>
</div>
    <!-- <div class="thumbnail"> could be used instead of row well class to provide borner without background color-->
